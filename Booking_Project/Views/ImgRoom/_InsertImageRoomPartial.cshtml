@model Booking_Project.Models.Image_Room
@{
    ViewData["Title"] = "Add images";
    SelectList Rooms = new SelectList(ViewBag.rooms, "Id", "room_number");

}
<link rel="stylesheet" href="~/css/AddNew.css" asp-append-version="true" />
<div class="container_reg col-7 mt-4 mb-4" id="imagepartial">
    <div class="title">Add Room Image</div>
    <div class="content">
        <form asp-action="Insert" asp-controller="ImgRoom" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="input-box">
                <label class="details" asp-for="ImageURL">Image</label>
                <input type="file" asp-for="ImageURL" class="form-control form-control-lg" id="formFileLg" name="imageFile" />
            </div>

            <div class="input-box">
                <label class="details" asp-for="Description"></label>
                <input asp-for="Description" required type="text" class="form-control">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            @*   <div class="input-box">
            <label asp-for="Description" class="details"></label>
            <input asp-for="Description"  />
            <span asp-validation-for="Description" class="text-danger"></span>
            </div> *@
            <div class="input-box">
                <label asp-for="RoomId" class="details"></label>
                <select asp-items="Rooms" class="form-control" asp-for="RoomId">
                    <option value="">--Select Room--</option>
                </select>
            </div>


            <div class="button">
                <input type="submit" value="Create" />
            </div>
        </form>
        <div>
            <a asp-action="Rooms" asp-controller="Room">Back to List</a>
        </div>
    </div>
</div>


<script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

</script>