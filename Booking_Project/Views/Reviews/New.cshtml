@model Reviews

@{
    SelectList users = new SelectList(ViewBag.userlist, "Id","UserName");
    SelectList hotels = new SelectList(ViewBag.hotellist, "Id", "UserName");
    ViewData["Title"] = "New";
}

<h1>New</h1>


<hr />

        <form asp-action="New" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Rating" ></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReviewText" ></label>
                <input asp-for="ReviewText" class="form-control" />
                <span asp-validation-for="ReviewText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatePosted" ></label>
                <input asp-for="DatePosted" class="form-control" />
                <span asp-validation-for="DatePosted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" >User Name</label>
              <select asp-for="UserId" asp-items="users" class="form-control">
                  <option value="0">--Select User--</option>
              </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HotelId" >Hotel</label>
               <select class="form-control" asp-for="HotelId" asp-items="hotels">
                 <option>--Select Hotel</option>
               </select>
                <span asp-validation-for="HotelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ADD" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" >Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
